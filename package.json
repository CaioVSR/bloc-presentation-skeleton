{
  "name": "bloc-presentation-skeleton",
  "displayName": "Bloc Presentation Skeleton",
  "description": "Generate boilerplate code for Cubit/State/Presentation Events in Flutter projects.",
  "version": "0.0.1",
  "publisher": "CaioVSR",
  "repository": {
    "type": "git",
    "url": "https://github.com/CaioVSR/bloc-presentation-skeleton.git"
  },
  "bugs": {
    "url": "https://github.com/CaioVSR/bloc-presentation-skeleton/issues"
  },
  "homepage": "https://github.com/CaioVSR/bloc-presentation-skeleton#readme",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bloc-presentation-skeleton.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "bloc-presentation-skeleton.generateCubit",
        "title": "Presentation Skeleton: New Cubit"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "bloc-presentation-skeleton.generateCubit",
          "when": "explorerResourceIsFolder",
          "group": "z_commands"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
